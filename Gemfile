source 'https://rubygems.org'

gem 'sinatra'
gem 'httparty'

group :development, :test do
  # local server
  gem 'thin'

  # middleware
  gem 'rack'
  gem 'rack-test', :require => 'rack/test'

  # Ruby unit test library
  gem 'rspec'

  # JavScript unit test lirbrary
  gem 'jasmine'

  # stub HTTP requests
  gem 'webmock'

  # Ruby task runner
  gem 'rb-fsevent'
  gem 'guard-rspec'
  gem 'guard-compass'
  gem 'guard-livereload'
end
